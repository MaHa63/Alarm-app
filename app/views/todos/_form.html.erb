      <h2><%= pluralize(todo.errors.count, "error") %> prohibited this todo from being saved:</h2>

      <ul>
      <% todo.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :created %>
    <%= f.datetime_select :created %>
  </div>

  <div class="field">
    <%= f.label :completed %>
    <%= f.datetime_select :completed %>
  </div>

  <div class="field">
    <%= f.label :priority %>
    <%= f.number_field :priority %>
  </div>

  <div class="field">
    <%= f.label :duedate %>
    <%= f.datetime_select :duedate %>
  </div>

  <div class="field">
    <%= f.label :closed %>
    <%= f.check_box :closed %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
