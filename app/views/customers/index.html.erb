<div class="container">
  
<h1>Asiakkaat</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th data-field="whole_name">Nimi</th>
      <th data-field="phone_nbr">Puhelin</th>
      <th data-field="street">Lähiosoite</th>
      <th data-field="zip_code">Postinumero</th>
      <th data-field="city">Postitoimipaikka</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.whole_name %></td>
        <td><%= customer.phone_nbr %></td>
        <td><%= customer.street %></td>
        <td><%= customer.zip_code %></td>
        <td><%= customer.city %></td>
        <td><%= link_to 'Muokkaa', { :controller => :customers, :action => 'edit_entry', :remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-window', :id => customer.id }, class: 'btn btn-green btn-xs', :method => :post  %> </td>
        <td><%= button_to 'Poista', { :controller => :customers, :action => 'destroy', :id => customer.id },:method => :delete, class: "btn btn-red btn-xs", data: { confirm: "Oletko varma tietueen poistamisesta ?"} %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Lisää Asiakas', new_entry_customers_path, {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-window', :action => 'new_entry', class: 'btn btn-green'} %>  
  <div id="myModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content"></div>
    </div>
  </div>

</div>